<div class="container">
  <h1> Edit a pet</h1>
  <%= simple_form_for @pet do |f| %>
  <%= f.input :name %>
  <%= f.input :location %>
  <%= f.input :date, as: :date, html5: true %>
  <%= f.input :species, collection: Pet::SPECIES %>
  <%= f.submit 'Edit', class: "btn btn-primary" %>
  <% end %>

</div>
